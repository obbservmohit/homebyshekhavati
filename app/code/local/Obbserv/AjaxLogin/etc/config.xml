<?xml version="1.0"?>
<config>
    <modules>
        <Obbserv_AjaxLogin>
            <version>0.2.6</version>
        </Obbserv_AjaxLogin>
    </modules>
    <global>
        <helpers>
            <ajaxlogin>
                <class>Obbserv_AjaxLogin_Helper</class>
            </ajaxlogin>
        </helpers>
    </global>
    <frontend>
        <routers>
            <ajaxlogin>
                <use>standard</use>
                <args>
                    <module>Obbserv_AjaxLogin</module>
                    <frontName>ajaxlogin</frontName>
                </args>
            </ajaxlogin>
        </routers>
    </frontend>
    <adminhtml>
        <!-- Backend translation file -->
        <translate>
            <modules>
                <Obbserv_AjaxLogin>
                    <files>
                        <default>Obbserv_AjaxLogin.csv</default>
                    </files>
                </Obbserv_AjaxLogin>
            </modules>
        </translate>
    </adminhtml>
    <default>
        <ajaxlogin>
            <options>
                <enable>1</enable>
            </options>
        </ajaxlogin>
    </default>
</config>